<Page x:Class="DGE_Attendance_Application.timeLeftPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DGE_Attendance_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="timeLeftPage">

    <Grid>
        <Label Content="User ID" HorizontalAlignment="Left" Margin="250,88,0,0" VerticalAlignment="Top" Width="111"/>
        <Label Content="Room" HorizontalAlignment="Left" Margin="250,119,0,0" VerticalAlignment="Top"/>
        <Label Content="Date and time left" HorizontalAlignment="Left" Margin="250,150,0,0" VerticalAlignment="Top" Width="110"/>
        <DatePicker x:Name="dateTimeLeft_picker" HorizontalAlignment="Left" Margin="392,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="userID_tb" HorizontalAlignment="Left" Height="23" Margin="392,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="roomID_tb" HorizontalAlignment="Left" Height="23" Margin="392,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <RadioButton Content="Class" HorizontalAlignment="Left" Margin="250,241,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Office" HorizontalAlignment="Left" Margin="392,241,0,0" VerticalAlignment="Top"/>
        <Button Content="Log entry" HorizontalAlignment="Left" Margin="392,329,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Page>
